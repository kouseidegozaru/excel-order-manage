VERSION 1.0 CLASS
BEGIN
  MultiUse = -1  'True
END
Attribute VB_Name = "Sheet1"
Attribute VB_GlobalNameSpace = False
Attribute VB_Creatable = False
Attribute VB_PredeclaredId = True
Attribute VB_Exposed = True
Private Sub Worksheet_Activate()
    SetValidations
End Sub

Private Sub Worksheet_Change(ByVal Target As range)

    'データアクセス
    Dim DataStorage As New dataAccesser

    Dim targetWs As Worksheet
    Set targetWs = ThisWorkbook.Sheets(OrderWb_SheetName)

    ' セルの変更を監視
    Dim events As New ChangeEvents
    events.Initialize targetWs
    events.SetRange targetWs.range(Target.Address)


    ' 担当者コードの変更を監視
    If events.IsChanged(OrderWb_InputUserCDRange) Then
        ' 担当者名の表示
        SetUserName DataStorage.GetUserName(GetUserCD)
    End If

    '部門コードの変更を監視
    If events.IsChanged(OrderWb_InputBumonCDRange) Then
        ' 部門名の表示
        SetBumonName DataStorage.GetBumonName(GetBumonCD)
    End If

    If events.IsChanged(OrderWb_InputProductsRange) Then
        ' 商品情報の表示
        DisplayProductsInfo Target
    End If
    
    
    
End Sub
